{
  "version": "0.2.0",
  "inputs": [
    {
      "id": "buildType",
      "type": "pickString",
      "description": "Build or Rebuild?",
      "options": [
        "build",
        "rebuild"
      ],
      "default": "build"
    }
  ],
  "configurations": [
    // MSVC (Windows only - requires cpptools extension)
    {
      "name": "MSVC Debug",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "preLaunchTask": "${input:buildType}:vs2022-debug"
    },
    {
      "name": "MSVC Release",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "preLaunchTask": "${input:buildType}:vs2022-release"
    },
    // Linux OS (using CodeLLDB)
    {
      "name": "Launch Target (Linux)",
      "type": "lldb",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "cwd": "${workspaceFolder}",
      "env": {
        "ASAN_OPTIONS": "detect_leaks=0"
      }
    },
  ]
}