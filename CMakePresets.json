{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 28,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": ".base",
      "hidden": true,
      "cacheVariables": {
        "ROPIC_BUILD_EXAMPLES": "ON",
        "ROPIC_BUILD_TESTING": "ON",
        "ROPIC_BUILD_BENCHMARKS": "ON"
      }
    },
    {
      "name": ".base-ci",
      "hidden": true,
      "cacheVariables": {
        "ROPIC_BUILD_EXAMPLES": "OFF",
        "ROPIC_BUILD_TESTING": "ON",
        "ROPIC_BUILD_BENCHMARKS": "OFF"
      }
    },
    {
      "name": ".ninja",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER_LAUNCHER": "ccache"
      }
    },
    {
      "name": ".gcc",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": ".clang",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "config-vs2022",
      "inherits": ".base",
      "displayName": "MSVC 2022",
      "description": "Use MSVC for Debug and Release builds",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build/msvc2022",
      "cacheVariables": {
        "CMAKE_CONFIGURATION_TYPES": "Debug;Release"
      }
    },
    {
      "name": "config-gcc-debug",
      "inherits": [
        ".base",
        ".ninja",
        ".gcc"
      ],
      "displayName": "GCC Debug",
      "description": "Use GCC in Debug mode with debug info",
      "binaryDir": "${sourceDir}/build/gcc-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "config-gcc-release",
      "inherits": [
        ".base",
        ".ninja",
        ".gcc"
      ],
      "displayName": "GCC Release",
      "description": "Use GCC in Release mode with optimizations",
      "binaryDir": "${sourceDir}/build/gcc-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "config-clang-debug",
      "inherits": [
        ".base",
        ".ninja",
        ".clang"
      ],
      "displayName": "Clang Debug",
      "description": "Use Clang in Debug mode with debug info and sanitizers",
      "binaryDir": "${sourceDir}/build/clang-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "config-clang-release",
      "inherits": [
        ".base",
        ".ninja",
        ".clang"
      ],
      "displayName": "Clang Release",
      "description": "Use Clang in Release mode with optimizations and ThinLTO",
      "binaryDir": "${sourceDir}/build/clang-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "config-vs2022-ci",
      "inherits": ".base-ci",
      "displayName": "MSVC 2022 CI",
      "description": "MSVC Release & Debug for CI",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build/msvc2022-ci",
      "cacheVariables": {
        "CMAKE_CONFIGURATION_TYPES": "Debug;Release"
      }
    },
    {
      "name": "config-gcc-ci",
      "inherits": [
        ".base-ci",
        ".gcc"
      ],
      "displayName": "GCC CI",
      "description": "GCC Release for CI (no ccache)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/gcc-ci",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "config-clang-ci",
      "inherits": [
        ".base-ci",
        ".clang"
      ],
      "displayName": "Clang CI",
      "description": "Clang Release for CI (no ccache)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/clang-ci",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": ".build-base",
      "hidden": true,
      "jobs": 8,
      "verbose": false
    },
    {
      "name": "build-vs2022-debug",
      "inherits": ".build-base",
      "configurePreset": "config-vs2022",
      "configuration": "Debug",
      "description": "Build with MSVC in Debug mode"
    },
    {
      "name": "build-vs2022-release",
      "inherits": ".build-base",
      "configurePreset": "config-vs2022",
      "configuration": "Release",
      "description": "Build with MSVC in Release mode"
    },
    {
      "name": "build-gcc-debug",
      "inherits": ".build-base",
      "configurePreset": "config-gcc-debug",
      "description": "Build with GCC in Debug mode"
    },
    {
      "name": "build-gcc-release",
      "inherits": ".build-base",
      "configurePreset": "config-gcc-release",
      "description": "Build with GCC in Release mode"
    },
    {
      "name": "build-clang-debug",
      "inherits": ".build-base",
      "configurePreset": "config-clang-debug",
      "description": "Build with Clang in Debug mode"
    },
    {
      "name": "build-clang-release",
      "inherits": ".build-base",
      "configurePreset": "config-clang-release",
      "description": "Build with Clang in Release mode"
    },
    {
      "name": "build-vs2022-ci",
      "inherits": ".build-base",
      "configurePreset": "config-vs2022-ci",
      "configuration": "Release",
      "description": "Build with MSVC 2022 for CI"
    },
    {
      "name": "build-gcc-ci",
      "inherits": ".build-base",
      "configurePreset": "config-gcc-ci",
      "description": "Build with GCC for CI"
    },
    {
      "name": "build-clang-ci",
      "inherits": ".build-base",
      "configurePreset": "config-clang-ci",
      "description": "Build with Clang for CI"
    }
  ],
  "testPresets": [
    {
      "name": ".test-base",
      "hidden": true,
      "output": {
        "outputOnFailure": true
      },
      "environment": {
        "GTEST_COLOR": "1"
      },
      "execution": {
        "jobs": 8
      }
    },
    {
      "name": "test-vs2022-debug",
      "inherits": ".test-base",
      "configurePreset": "config-vs2022",
      "configuration": "Debug"
    },
    {
      "name": "test-vs2022-release",
      "inherits": ".test-base",
      "configurePreset": "config-vs2022",
      "configuration": "Release"
    },
    {
      "name": "test-gcc-debug",
      "inherits": ".test-base",
      "configurePreset": "config-gcc-debug"
    },
    {
      "name": "test-gcc-release",
      "inherits": ".test-base",
      "configurePreset": "config-gcc-release"
    },
    {
      "name": "test-clang-debug",
      "inherits": ".test-base",
      "configurePreset": "config-clang-debug"
    },
    {
      "name": "test-clang-release",
      "inherits": ".test-base",
      "configurePreset": "config-clang-release"
    },
    {
      "name": "test-vs2022-ci",
      "inherits": ".test-base",
      "configurePreset": "config-vs2022-ci"
    },
    {
      "name": "test-gcc-ci",
      "inherits": ".test-base",
      "configurePreset": "config-gcc-ci"
    },
    {
      "name": "test-clang-ci",
      "inherits": ".test-base",
      "configurePreset": "config-clang-ci"
    }
  ]
}